<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:orientation="vertical">

	<TextView android:id="@+id/TextView01" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/app_name" android:textSize="25px"
		android:gravity="center_horizontal" android:layout_gravity="center_horizontal"/>

	<TextView android:id="@+id/TextBlindsGoUp" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/timeToBlindsGoUp"
		android:textSize="20px" android:layout_gravity="center_horizontal" android:gravity="center_horizontal"/>

	<TableLayout android:id="@+id/TableLayout01" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal">

		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:id="@+id/TextTimer"
			android:includeFontPadding="false" android:text="00:00" android:textSize="40px"
			android:textColor="@android:color/white" />

	</TableLayout>
	
	<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:id="@+id/LayoutTblBlinds" >
			
		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_weight="1">
			<TextView android:id="@+id/textViewBigBlind" 
				android:text="@string/bigBlind" android:textSize="20px"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" />
		</LinearLayout>

		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_weight="0.4" >
			<TextView android:id="@+id/BigBlindValue"
				android:text="20" android:textSize="20px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>

	</LinearLayout>

	<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:id="@+id/LayoutTblBlinds" >
			
		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_weight="1">
			<TextView android:id="@+id/TextViewSmallBlind" 
				android:text="@string/smallBlind" android:textSize="20px"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" />
		</LinearLayout>

		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_weight="0.4">
			<TextView android:id="@+id/SmallBlindValue"
				android:text="10" android:textSize="20px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>

	</LinearLayout>

	<Button android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:id="@+id/ButtonPause"
		android:layout_gravity="center_horizontal" android:text="@string/pauseTimer" />
	<Button android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:id="@+id/ButtonSettings" android:layout_gravity="center_horizontal"
		android:text="@string/settingsText" />

</LinearLayout>
